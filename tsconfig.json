{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "lib": ["esnext", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist",
    "paths": {
      "@src/*": ["./src/*"]
    },
    "removeComments": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "strict": true,
    "target": "es5"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
